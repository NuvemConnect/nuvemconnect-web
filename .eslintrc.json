{
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    // Possible Errors
    "no-console": "off",
    "no-unused-vars": "warn",

    // Best Practices
    "no-else-return": "error",
    "no-empty-function": "error",
    "no-eval": "error",

    // Stylistic Issues
    "indent": ["error", 2],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "semi": ["error", "always"],

    // ECMAScript 6
    "arrow-spacing": "error",
    "no-var": "error",
    "prefer-const": "error"
  }
}
